<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('includes/head.ejs') %>

</head>
<body>
    <header>
        <%- include('includes/nav.ejs') %>
        <link rel="stylesheet" href="/public/styles/collectionForm.css">
        <script src="/public/scripts/collectionForm.js"></script>
     </header>

     <main>
        <h1>New Collection Form</h1>
        <% if (inputData.massege) { %>
            <p class="err-massege"> <%=inputData.massege%></p>
        <% } %>
        <form action="/collections/add" method="post">
            <div>
                <label for="title"> title</label>
                <input required type="text" name="title" id="title"  value=<%= inputData.title %>>
            </div>
            <div>
                <label for="description"> description</label>
                <textarea required name="description" id="description" cols="50" rows="7"><%= inputData.description   %></textarea>
            </div>
            
            <div>
                <input type="submit" value="submit" class="btn">
            </div>
            <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>">
        </form>
     </main>
     
</body>
</html>